<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="card-header col-md-2" style="background-color: transparent;">
                            <strong>Comment View</strong>
                        </div>

                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-stblped table-earning first text-left ">
                                <thead>
                                    <tr>
                                        <th>post name</th>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Comment</th>
                                        <th>Image</th>
                                        <th>Operation</th>
                                    </tr>
                                </thead>
                                <tbbly>
                                    <% for(var bl of data) {%>
                                        <tr>
                                            <td>
                                                <%= bl.title %>
                                            </td>
                                            <td>
                                                <%= bl.name %>
                                            </td>
                                            <td>
                                                <%= bl.createdAt %>
                                            </td>
                                            <td>
                                                <%= bl.comment %>
                                            </td>
                                            <td>
                                                <img src="<%= bl.image %>" height="100" width="100" alt="">
                                            </td>
                                            <td>
                                                <% if(bl.isActive){ %>
                                                    <a href="?id=<%= bl.id %>&status=deActive">Active</a>
                                                    <% }else{ %>
                                                        <a href="?id=<%= bl.id %>&status=Active">Deactive</a>
                                                        <% } %>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbbly>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>