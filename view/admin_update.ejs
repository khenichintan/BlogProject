<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <strong>Update Admin</strong>
                            </div>
                            <div class="card-body card-block">
                                <form action="/editrecord" method="post" enctype="multipart/form-data" class="form-horizontal">

                                    <input type="hidden" name="editid" value="<%= data.id %>">

                                    <% var num = data.name.split(" ") %>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Enter first name</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="first_name" placeholder="First Name" class="form-control" value="<%= num[0] %>">
                                                <small class="form-text text-muted"></small>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Enter second name</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="second_name" placeholder="Second Name" class="form-control" value="<%= num[1] %>">
                                                <small class="form-text text-muted"></small>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="email-input" class=" form-control-label">Enter Email</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="email" id="email-input" name="email" placeholder="Enter Email" class="form-control" value="<%= data.email %>">
                                                <small class="help-block form-text"></small>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label class=" form-control-label">Select Gender</label>
                                            </div>
                                            <div class="col col-md-9">
                                                <div class="form-check">
                                                    <div class="radio">
                                                        <label for="radio1" class="form-check-label ">
                                                                <input type="radio" id="radio1" name="gender" value="Male"<% if(data.gender=="Male") {%><%= 'checked' %><% } %> class="form-check-input">Male
                                                            </label>
                                                    </div>
                                                    <div class="radio">
                                                        <label for="radio2" class="form-check-label ">
                                                                <input type="radio" id="radio2" name="gender" value="Female"<% if(data.gender=="Female") {%><%= 'checked' %><% } %> class="form-check-input">Female
                                                            </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label class=" form-control-label">Select Hobby</label>
                                            </div>
                                            <div class="col col-md-9">
                                                <div class="form-check-inline form-check">
                                                    <label for="inline-radio1" class="form-check-label ">
                                                            <input type="checkbox" id="inline-radio1" name="hobby[]" value="Reading"<% if(data.hobby.includes("Reading")) {%><%= 'checked' %><% } %>  class="form-check-input">Reading
                                                        </label>
                                                    <label for="inline-radio2" class="form-check-label ">
                                                            <input type="checkbox" id="inline-radio2" name="hobby[]" value="Music"<% if(data.hobby.includes("Music")) {%><%= 'checked' %><% } %>  class="form-check-input">Music
                                                        </label>
                                                    <label for="inline-radio3" class="form-check-label ">
                                                            <input type="checkbox" id="inline-radio3" name="hobby[]" value="Traveling"<% if(data.hobby.includes("Traveling")) {%><%= 'checked' %><% } %>  class="form-check-input">Traveling
                                                        </label>
                                                </div>
                                            </div>
                                        </div>

                                        <% var city = ["Surat","Amreli","Bhavnagar"] %>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select City</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="city" id="select" class="form-control">
                                                        <option value="0">Select city</option>
                                                        <% for(var i=0; i<city.length; i++ ) {%>
                                                        <option value="<%= city[i] %>"<% if(data.city==city[i]) {%><%= 'selected' %><% } %>><%= city[i] %></option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Description</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="description" id="textarea-input" rows="9" placeholder="Content..." class="form-control"><%= data.description %></textarea>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">Image</label>
                                                </div>
                                                <div class="col-12 col-md-9 d-flex">
                                                    <input type="file" id="file-input" name="image" class="form-control-file">
                                                    <img src="<%= data.image %>" height="100" width="100">
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" name="submit" class="btn btn-primary btn-sm">
                                                        <i class="fa fa-dot-circle-o"></i> Submit
                                                    </button>
                                                <button type="reset" class="btn btn-danger btn-sm">
                                                        <i class="fa fa-ban"></i> Reset
                                                    </button>
                                            </div>
                                </form>
                            </div>

                        </div>

                    </div>


                </div>
                <%- include('footer') %>