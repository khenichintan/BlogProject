<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-header col-md-2" style="background-color: transparent;">
                            <strong>Admin View</strong>
                        </div>
                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-striped table-earning first text-left ">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Hobby</th>
                                        <th>City</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Operation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var ad of admindata) {%>
                                        <tr>

                                            <td>
                                                <%= ad.name %>
                                            </td>
                                            <td>
                                                <%= ad.email %>
                                            </td>
                                            <td>
                                                <%= ad.gender %>
                                            </td>
                                            <td>
                                                <%= ad.hobby %>
                                            </td>
                                            <td>
                                                <%= ad.city %>
                                            </td>
                                            <td>
                                                <%= ad.description %>
                                            </td>
                                            <td><img src="<%= ad.image %>" height="100"></td>

                                            <td><a href="/delete/<%= ad.id %>"><i class="fa-solid fa-trash-arrow-up" style="font-size: 25px; padding-right: 20px;"></i></a>
                                                <a href="/update/<%= ad.id %>"><i class="fa-regular fa-pen-to-square" style="font-size: 25px;"></i></a></td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>